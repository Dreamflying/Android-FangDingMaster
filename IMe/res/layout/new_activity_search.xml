<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/new_title" >

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/frends_back_btt"
                android:layout_width="20dp"
                android:focusable="false"
                android:enabled="false"
                android:clickable="false"
                android:layout_height="20dp"
                android:background="@drawable/back_bttt_yellow"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/frends_title_logo_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:focusable="false"
                android:enabled="false"
                android:clickable="false"
                android:gravity="center_vertical"
                android:src="@drawable/logo_s" />
        </LinearLayout>

        <TextView
            android:id="@+id/friend_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/back"
            android:text="搜索结果"
            android:textColor="#dfde95"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.utils.widght.XListView
        android:id="@+id/new_iwant_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:divider="@drawable/new_home_divider" />

</LinearLayout>