<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="left"
    >

    <RelativeLayout
        android:id="@+id/dynamic_comment_bg_rly"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/dynamic_content_comment_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0sp"
            android:layout_marginTop="3sp"
            android:layout_toRightOf="@+id/dynamic_content_comment_img"
            android:textColor="#7bbfea"
            android:text="hhaa"
            android:textSize="15sp" />
         <TextView
            android:id="@+id/dynamic_content_comment_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:layout_toRightOf="@+id/dynamic_content_comment_title_tv"
            android:textColor="#999"
            android:text="hhaa"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dynamic_content_comment_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamic_content_comment_title_tv"
            android:layout_alignBottom="@+id/dynamic_content_comment_img"
            android:layout_marginBottom="1sp"
            android:layout_marginLeft="0sp"
            android:layout_toRightOf="@+id/dynamic_content_comment_img"
            android:text="5月23日 18:18"
            android:textColor="#888888"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/dynamic_content_comment_img"
            android:layout_width="40dip"
            android:visibility="gone"
            android:layout_height="40dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/weiyi"
            android:src="@drawable/add_img" />

    </RelativeLayout>

</LinearLayout>