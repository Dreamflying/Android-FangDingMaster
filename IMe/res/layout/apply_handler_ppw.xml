<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_music_list_rly"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:background="#e0000000"
    >

    <RelativeLayout
        android:id="@+id/music_more_rly12"
        android:layout_width="210dip"
        android:layout_height="110dp"
        android:background="@drawable/apply_piyue" >

        <RelativeLayout
            android:id="@+id/apply_true"
            android:layout_width="120dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
           >

           
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/apply_false"
            android:layout_width="120dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/white_to_gray" >

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/apply_load"
            android:visibility="gone"
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:layout_alignTop="@+id/apply_false"
            android:layout_toRightOf="@+id/apply_false"
            android:background="@drawable/white_to_gray" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                 />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageView5"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>