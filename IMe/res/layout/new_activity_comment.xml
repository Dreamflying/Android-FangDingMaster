<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/add__title_back_rl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/new_title" >

        <LinearLayout
            android:id="@+id/add__title_back_ll"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
             android:layout_toRightOf="@id/add__title_back_ll"
               android:layout_centerVertical="true"
            android:orientation="horizontal" >

 <TextView
            android:id="@+id/add__name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="取消"
            android:textColor="#f0f2c3"
            android:textSize="20sp" />
        </LinearLayout>

       

        <Button
            android:id="@+id/add_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_marginRight="15dp"
            android:text="评论"
             android:textColor="#f0f2c3"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <EditText 
        android:id="@+id/new_comment_content"
        android:layout_width="fill_parent"
        android:gravity="top"
        android:layout_margin="10dp"
        android:hint="说点什么嘛"
        android:textColor="#ffffff"
        android:background="#00000000"
        android:layout_height="fill_parent"
        />

</LinearLayout>
