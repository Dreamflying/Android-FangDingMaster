<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_bg"
    android:orientation="vertical" >

    <include layout="@layout/view_title_public" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:text="账号管理"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/setup_bind_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="账号绑定"
                android:textColor="#474944"
                android:textSize="18sp"
                android:textStyle="normal" 
                android:visibility="gone"
                />
 			<Button
                android:id="@+id/setup_modifypwd_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="修改密码"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal" />
            
            <Button
                android:id="@+id/setup_logout_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="注销账号"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:text="缓存管理"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/setup_huancun_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="清除缓存"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:text="通用"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
               <RelativeLayout
                 android:id="@+id/setup_sound_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/setup_sound_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:padding="10dp"
                    android:text="铃声开关"
                    android:textColor="#474944"
                    android:background="@null"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/setup_sound_choose_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/choose_checked" />

                <ToggleButton
                    android:id="@+id/setup_sound_toggle"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:text="ToggleButton"
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <Button
                android:id="@+id/setup_about_me_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="关于我们"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/setup_share_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="分享给好友"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <RelativeLayout
                  android:id="@+id/setup_message_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/setup_message_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:padding="10dp"
                    android:text="消息推送"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/setup_message_choose_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/choose_checked" />
                  <ToggleButton
                    android:id="@+id/setup_message_toggle"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:text="ToggleButton"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <Button
                android:id="@+id/setup_update_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="检查更新"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/setup_quit_btn"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/new_exit_sys"
                android:padding="10dp"
                android:text="退出应用"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>