<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/home_mylist_headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/home_mylist_top_3butt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/home_mylist_top_shenqing"
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/home_my_shengqing_img" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="申请" />

                <TextView
                    android:id="@+id/home_my_apply_text"
                    android:layout_width="12dip"
                    android:layout_height="12dip"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="12dip"
                    android:background="@drawable/filled_circle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_mylist_top_gebi"
                android:layout_width="fill_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/gebi"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="18dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/home_my_gebi_img" />

                <TextView
                    android:layout_below="@id/gebi"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                     android:layout_marginLeft="18dip"
                    android:gravity="center"
                    android:text="隔壁" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/home_mylist_top_dongtai"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/home_my_shenqing_img" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="动态" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_mylist_top_quan"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/home_my_quan_img" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="我的券" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/home_mylist_top_tv"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#e1e3a8"
            android:paddingLeft="10dp"
            android:text="聊聊" />
    </LinearLayout>

<ListView 
    android:id="@+id/home_my_lv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/list_divider_line" />
</LinearLayout>
