<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/new_title">"

        <LinearLayout
            android:id="@+id/setup_return_btns"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/back_bttt_yellow"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/add__title_logo_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:src="@drawable/logo_s" />
        </LinearLayout>

        <TextView
            android:id="@+id/dynamic_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/setup_return_btns"
            android:text="修改资料"
            android:textColor="#dfde95"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/save"
            android:visibility="gone" />

        <Button
            android:id="@+id/modify_ok"
          android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_marginRight="15dp"
            android:text="完成"
             android:textColor="#f0f2c3"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nickname"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:background="#00000000"
        android:drawableBottom="@drawable/comment_edittext"
        android:hint="请输入昵称"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/idiotext"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dip"
        android:background="#00000000"
        android:drawableBottom="@drawable/comment_edittext"
        android:hint="请输入签名"
        android:textColor="#ffffff" />

</LinearLayout>